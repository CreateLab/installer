<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Installer.Views.LicenceView">
    <Grid RowDefinitions="* Auto 0.2*" ColumnDefinitions="* Auto 0.1*">
        <TextBox Margin="20 20 0 20" Text="{Binding Licence}" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" IsEnabled="False"></TextBox>
     <Button Grid.Row="1" Grid.Column="1" Content="Next" Command="{Binding GoNext}"></Button> 
    </Grid>
</UserControl>
